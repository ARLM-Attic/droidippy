<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/view_chat_layout"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:layout_height="match_parent">
  <ListView android:id="@+id/view_chat_powers" 
	    android:layout_alignParentTop="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_width="match_parent"
	    android:layout_above="@+id/view_chat_intent_extras"
	    android:layout_height="match_parent" />
  <TextView android:id="@+id/view_chat_intent_extras"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentRight="true"
	    android:visibility="gone"
	    android:layout_above="@+id/view_chat_intent" />
  <TextView android:id="@+id/view_chat_intent_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="15dp"
	    android:textSize="24sp"
	    android:layout_alignBaseline="@+id/view_chat_intent"
	    android:layout_alignParentLeft="true"
	    android:text="@string/intent" />
  <Button android:id="@+id/view_chat_intent"
	  android:layout_height="wrap_content"
	  android:layout_width="wrap_content"
	  android:layout_marginBottom="15dp"
	  android:layout_alignParentRight="true"
	  android:layout_above="@+id/view_game_right_arrow" />
  <ImageButton android:id="@+id/view_game_left_arrow"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentBottom="true"
	       android:layout_alignParentLeft="true"
	       android:background="@null"
	       android:src="@drawable/left" />
  <ImageButton android:id="@+id/view_game_right_arrow"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentBottom="true"
	       android:layout_alignParentRight="true"
	       android:background="@null"
	       android:src="@drawable/right" />
</RelativeLayout>
